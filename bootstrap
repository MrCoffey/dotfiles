#!/usr/bin/env sh

# Bootstrap new configuration.
cd
rm -rf dotfiles/ .config/nvim/ .config/ranger/ .tmux.conf
git clone --quiet https://github.com/mporras/dotfiles.git

mkdir .config/nvim/
ln -s ~/dotfiles/init.vim ~/.config/nvim/init.vim

mkdir .config/ranger/
ln -s ~/dotfiles/rc.conf ~/.config/ranger/rc.conf

ln -s ~/dotfiles/tmux.conf ~/.tmux.conf

# Configure Git.
dotfiles/git-config

echo 'Starting Neovim to install plugins...'
nvim
