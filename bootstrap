#!/usr/bin/env sh

echo 'Bootstrapping new configuration...'
cd; rm -rf ~/.vim ~/.nvim ~/.vimrc ~/.nvimrc ~/.tmux.conf
git clone --quiet https://github.com/mporras/dotfiles.git ~/.vim
ln -s ~/.vim ~/.nvim
ln -s ~/.vim/vimrc ~/.nvimrc
ln -s ~/.vim/vimrc ~/.vimrc
ln -s ~/.vim/tmux.conf ~/.tmux.conf

echo 'Configuring Git...'
~/.vim/git-config

echo 'Starting Neovim to install plugins...'
nvim
